<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SysUserMapper">
    <select id="findAll" resultType="com.example.entity.SysUser">
        select * from sys_user
    </select>

    <resultMap id="mainMap" type="com.example.entity.SysUser">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="sex" property="sex"/>
        <result column="avatar" property="avatar"/>
        <result column="address" property="address"/>
        <result column="open_id" property="openId"/>
        <result column="status" property="status"/>
        <result column="admin" property="admin"/>
        <result column="phonenumber" property="phonenumber"/>
        <collection property="roles" ofType="com.example.entity.SysRole"  select="findRoles" column="id"/>

    </resultMap>

    <resultMap id="roleMap" type="com.example.entity.SysRole">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
        <result column="code" property="code"/>
        <collection property="menus" select="findMenus" column="id" ofType="com.example.entity.SysMenu"/>
        <collection property="permissions"  select="findPermission" column="id" ofType="com.example.entity.SysPermission"/>
    </resultMap>

    <resultMap id="menuMap" type="com.example.entity.SysMenu">
        <id column="id" property="id"/>
        <result column="path" property="path"/>
        <result column="icon" property="icon"/>
        <result column="title" property="title"/>
        <result column="component" property="component"/>
        <collection property="children" select="findChildrenMenu" column="id" ofType="com.example.entity.SysMenu"/>
    </resultMap>

    <resultMap id="permissionMap" type="com.example.entity.SysPermission">
        <id column="id" property="id"/>
        <result column="path" property="path"/>
        <result column="code" property="code"/>
    </resultMap>

    <!--根据用户名查询用户信息-->
    <select id="findByUsername" parameterType="String" resultMap="mainMap">
        select * from sys_user where username = #{username}
    </select>
    <!-- 根据用户ID查询角色信息-->
    <select id="findRoles" parameterType="long" resultMap="roleMap">
        select * from sys_role where id in (select role_id from sys_roles where user_id = #{id})
    </select>

    <!-- 根据角色ID查询数据权限信息-->
    <select id="findPermission" parameterType="int" resultMap="permissionMap" >
        select * from sys_permission where  id in( select permission_id from sys_permissions where role_id = #{id})
    </select>

    <!-- 根据角色ID查询菜单信息 -->
    <select id="findMenus"  parameterType="int" resultMap="menuMap">
        select * from sys_menu where id in( select menu_id from sys_menus where role_id = #{id}) and parent_id is null
    </select>

</mapper>